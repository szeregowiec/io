<div class="container">
    <div class="row">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <tbody>
                <tr>
                    <td class="text-center">Adres email</td>
                    <td class="text-center">$email<a href="#"></a></td>
                </tr>
                <tr>
                    <td class="text-center">Login</td>
                    <td class="text-center">$login<a href="#"></a></td>
                </tr>

                <tr>
                    <td class="text-center">Hasło</td>
                    <td class="text-center">
                        <text type="password" value="hasło">$password</text>
                        <a id="changePassword" data-target="#myModal" data-toggle="modal"> Zmień hasło</a>

                        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <form method="post" id="formChangePassword" action="/change">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Zamknij</span></button>
                                            <h4 class="modal-title" id="myModalLabel">Zmień hasło</h4>
                                        </div>

                                        <div class="modal-body">
                                            <label for="password">Wpisz obecne hasło</label>
                                            <input type="password" name="ChangePasswordOld" id="ChangePasswordOld">

                                            <label for="password">Wpisz nowe hasło</label>
                                            <input type="password" name="ChangePasswordNew" id="ChangePasswordNew">
                                        </div>

                                        <div class="modal-footer"><button type="button" class="btn btn-default" data-dismiss="modal">Zamknij</button><button type="submit" class="btn btn-primary" name="changePasswordSubmit" id="changePasswordSubmit">Zapisz zmiany</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </td>
                </tr>
                <tr>
                    <td class="text-center">Imię</td>
                    <td class="text-center">$name<a href="#"></a></td>
                </tr>
                <tr>
                    <td class="text-center">Nazwisko</td>
                    <td class="text-center">$surname<a href="#"></a></td>
                </tr>
                <tr>
                    <td class="text-center">Data urodzenia</td>
                    <td class="text-center">$birth_date<a href="#"></a></td>
                </tr>
                <tr>
                    <td class="text-center">Adres</td>
                    <td class="text-center">$address<a href="#"></a></td>
                </tr>
                <tr>
                    <td class="text-center">Kod pocztowy</td>
                    <td class="text-center">$postal_code<a href="#"></a></td>
                </tr>
                <tr>
                    <td class="text-center">Miasto</td>
                    <td class="text-center">$city<a href="#"></a></td>
                </tr>
                <tr>
                    <td class="text-center">Numer telefonu</td>
                    <td class="text-center">$phone<a href="#"></a></td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery.js"></script>
<script src="js/bootstrap.min.js"></script>
</body>

